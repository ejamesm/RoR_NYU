<h1>Accounts, Log In</h1>

<%= form_for(:accounts, url: accounts_path), :html => {:multipart => true} do |f| %>

	<div class="form-group">
		<div class="control-label col-md-2">
			<%= f.label :email %>
		</div>
		<div class="col-md-4">
			<%= f.text_field :email, {:class => "form-control input-md"} %>
		</div>
	</div>

	<div class="form-group">
		<div class="control-label col-md-2">
			<%= f.label :password %>
	</div>
	<div class="col-md-4">
		<%= f.text_field :password, {:class => "form-control input-md"} %>
	</div>
</div>

<div class="form-group">
	<div class="col-md-4 text-center">
		<%= f.submit "Log In", {class: "btn btn-primay btn-md"} %>

<% end %>